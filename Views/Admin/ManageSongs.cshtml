@model IEnumerable<LaLaFaMusicPortal.Models.Song>

@{
    ViewData["Title"] = "Manage Songs";
}

<h1>Manage Songs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Song</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Artist</td>
                <td>@song.Genre.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@song.SongId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@song.SongId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>