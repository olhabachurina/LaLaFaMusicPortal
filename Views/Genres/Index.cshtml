@model IEnumerable<LaLaFaMusicPortal.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="CreateGenre" class="btn btn-primary">Create New Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="EditGenre" asp-route-id="@item.GenreId" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteGenre" asp-route-id="@item.GenreId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
